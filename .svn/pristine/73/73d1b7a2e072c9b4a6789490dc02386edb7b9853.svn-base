<script type="text/javascript">
	//开启送餐员查询
	function openSearchviewSendname(){
		$('#sendnameSearchviewOrderHanleWin').window('open');
        $('#sendnameSOHWinInput').focus();
	}
	
	   //送餐员查询的快捷键
    function searchviewSendnameQuickKey(event,obj){
        //定义根据输入值，处理订单
        var inputCode = $(obj).val();
        //输入的键值 
        var event = event || window.event;
        var keyCode = event.which ? event.which : event.keyCode;    
        if(keyCode == 13){   //订单处理
            var objValue = $(obj).val();
            var sendname = $('#searchviewSendnameWinSpan').html();
            if(sendname.length == 0 ){
                //根据代码，查询送餐员姓名
                $.ajax({
                    type : "GET",
                    url : "__URL__/getSendnameByCode/code/"+objValue,
                    dataType : "json",
                    success : function(returnData){                 
                        if(returnData['error'] == 'error'){
                            $.messager.show({
                                title:'提示',
                                msg:'输入代码输入有误!',
                                height:70,
                                timeout:5000,
                                showType:'slide',
                                style:{
                                    left:0,right:'',top:'',
                                    bottom:-document.body.scrollTop-document.documentElement.scrollTop
                                }
                            });
                            return false;
                        }

                        if(returnData['success'] == 'success'){ 
                            handleData = returnData['data'];
                            $('#searchviewSendnameWinSpan').html(handleData.sendname);
                        }
                    }

                }); 
                return true; 
            }
            openNewTabUrl('配送送餐员查询','__URL__/searchviewForSendname/delsession/1/searchSendname/'+encodeURI(sendname)+'/searchSendnameCode/'+encodeURI(objValue));
         
            $(obj).val('');
            $('#searchviewSendnameWinSpan').html('');
            $('#sendnameSearchviewOrderHanleWin').window('close');  //关闭地址查询
        }

    }

	
    //对退餐的处理
    function searchCancelOrder(objValue,orderformid,rowIndex){
        //如果是退餐，就把订单置为已退餐
        $.ajax({
            type : "GET",
            url : "__URL__/cancelOrderHandle/orderformid/"+orderformid+"/code/"+objValue,
            dataType : "json",
            success : function(returnData){                 
                if(returnData['error'] == 'error'){
                    $.messager.show({
                        title:'提示',
                        msg:returnData['msg'],
                        height:70,
                        timeout:5000,
                        showType:'slide',
                        style:{
                            left:0,right:'',top:'',
                            bottom:-document.body.scrollTop-document.documentElement.scrollTop
                        }
                    });
                    return false;
                }

                if(returnData['success'] == 'success'){ 
                    rowIndex = rowIndex - 1;
                    $("#table<?php echo ($actionName); ?> tr:gt(0):eq("+rowIndex+") td:eq(6)").html('已退餐');
                }
            }

        });
    };

    //返回订单
    function searchBackOrder(objValue,orderformid,rowIndex){
        $.messager.confirm('确认', '是否真的需要返回订单?', function(r){
            if (r){
                $.ajax({
                    type : "GET",
                    url : "__URL__/backOrderHandle/orderformid/"+orderformid+"/code/"+objValue,
                    dataType : "json",
                    success : function(returnData){                 
                        if(returnData['error'] == 'error'){
                            $.messager.show({
                                title:'提示',
                                msg:returnData['msg'],
                                height:70,
                                timeout:5000,
                                showType:'slide',
                                style:{
                                    left:0,right:'',top:'',
                                    bottom:-document.body.scrollTop-document.documentElement.scrollTop
                                }
                            });

                            return false;
                        }

                        if(returnData['success'] == 'success'){ 
                            rowIndex = rowIndex - 1;
                            $("#<?php echo ($actionName); ?>OrderHandle<?php echo ($row); ?>").val();
                        }
                    }

                });
            }else{
                // var t = $("#<?php echo ($actionName); ?>OrderHandle"+rowIndex).numberbox('setValue','');
                $("#<?php echo ($actionName); ?>OrderHandle"+rowIndex).focus();
            }
        });
    };

    //打印订单
    function searchOrderPrintData(orderformid,rowIndex){
        //取得打印的内容
        $.ajax({
            type : "POST",
            url :  APP+"/OrderHandle/getPrintOrder/orderformid/"+orderformid,
            dataType : "json",
            success : function(data){  
                printOrderForm(data);
                //设置打印
                rowIndex = rowIndex - 1;
                $("#table<?php echo ($actionName); ?> tr:gt(0):eq("+rowIndex+") td:eq(6)").html('已打印');
            }
        })
    };
</script>